{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@chatapp/*": ["packages/*/src"],
//      "*": ["node_modules", "packages"]
    },

    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["es7"]
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "**/node_modules/*",
    // TODO: temp disable tsc for native app
    "packages/native-app"
  ]
}
